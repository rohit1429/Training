<script>
$(function(){
    var canvas=document.getElementById("canvas");
    var ctx=canvas.getContext("2d");
    ctx.textAlign = "center";
        ctx.font = "bold 20px arial";
        ctx.fillStyle = "black"
            ctx.fillText("Happy",150,75);
            ctx.fillStyle = "black"
            ctx.fillText("Birthday",150,110);
            ctx.fillStyle = "Blue"
            ctx.fillText("Priyanka", 150, 140);
           
            
            ctx.fillStyle = "red"
            ctx.fillText("Your Birthdate : 16/07/1999", 150, 180);
            
            
}); 

</script>
